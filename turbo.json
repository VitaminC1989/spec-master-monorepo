{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "build/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {},
        "generate:openapi": {
            "dependsOn": ["@spec/api#build"],
            "outputs": ["../../packages/api-contract/openapi.json"],
            "cache": false
        },
        "generate:types": {
            "dependsOn": ["@spec/api#generate:openapi"],
            "outputs": ["src/generated/**"],
            "cache": false
        }
    }
}