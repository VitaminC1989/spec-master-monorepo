# Dockerfile.web - Vite React 应用
# --- 阶段 1: 构建 (Builder) ---
FROM node:20-alpine AS builder

# 安装 pnpm
RUN npm install -g pnpm

WORKDIR /app

# 1. 复制 Monorepo 配置文件
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# 2. 复制所有 workspace 成员的 package.json（pnpm 需要这些来正确解析 lockfile）
COPY apps/web/package.json ./apps/web/package.json
COPY apps/api/package.json ./apps/api/package.json

# 3. 复制共享 packages（包含 @spec/types 等）
COPY packages ./packages

# 4. 安装依赖
# --frozen-lockfile 确保使用锁定的版本
# --shamefully-hoist 避免 Docker 中的软链接问题
RUN pnpm install --frozen-lockfile --shamefully-hoist

# 5. 复制 Web 源码并构建
COPY apps/web ./apps/web
WORKDIR /app/apps/web

# 构建 Vite 应用（生成 dist 目录）
# 可以通过 ARG 注入构建时的环境变量
ARG VITE_API_BASE_URL
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

RUN pnpm build

# --- 阶段 2: 生产运行 (Nginx) ---
FROM nginx:alpine AS runner

# 复制构建产物到 nginx
COPY --from=builder /app/apps/web/dist /usr/share/nginx/html

# 复制 nginx 配置（支持 SPA 路由）
# 注意：API 代理配置取决于你的部署架构
# - Docker Compose: 使用服务名如 http://api:3000
# - Kubernetes: 使用 Service 名或配置 Ingress
# - 独立部署: 可能需要外部反向代理或直接访问 API 域名
COPY <<EOF /etc/nginx/conf.d/default.conf
server {
    listen 80;
    server_name _;
    root /usr/share/nginx/html;
    index index.html;

    # 启用 gzip 压缩
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # 静态资源缓存（Vite 构建的资源带有 hash，可以长期缓存）
    location /assets {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # SPA 路由支持
    location / {
        try_files \$uri \$uri/ /index.html;
    }

    # API 代理到 Sealos 内网后端
    location /api {
        # Sealos 内网地址（容器间通信，低延迟）
        proxy_pass http://spec-master-api-cchkbgdkkjep.ns-wit020qo:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade \$http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host \$host;
        proxy_set_header X-Real-IP \$remote_addr;
        proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto \$scheme;
    }
}
EOF

EXPOSE 80

# 健康检查
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost/ || exit 1

CMD ["nginx", "-g", "daemon off;"]